---
- name: dat ip cho Lo0
  hosts: R1
  gather_facts: False
  tasks:
    - name: Set Ipv4 address
      ios_l3_interface:
        name: loopback {{ item.name }}
        ipv4: 7.7.{{ item.number}}.7/24
      with_items:
        - { name: "0", number: 7}
    - name: Save configure
      ios_command:
        commands:
          - write memory
          - show ip int br
